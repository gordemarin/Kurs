<Window x:Class="ServiceCenter.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="500" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Background="{StaticResource BackgroundColor}">
        <Border Background="White" 
                CornerRadius="5" 
                Margin="20" 
                Padding="25">
            <StackPanel Margin="0,0,0,-15">
                <!-- Заголовок -->
                <TextBlock Text="ЦЕНТРА УПРАВЛЕНИЯ ЗАКАЗАМИ"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{StaticResource PrimaryColor}" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>

                <!-- Логотип или иконка -->
                <Border Background="{StaticResource AccentColor}" 
                        Width="80" Height="80" 
                        CornerRadius="40" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,20">
                    <TextBlock Text="RCC" 
                               Foreground="White" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Поля ввода -->
                <TextBlock Text="ИМЯ ПОЛЬЗОВАТЕЛЯ" 
                           Foreground="{StaticResource PrimaryColor}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Margin="0,0,0,20"/>

                <TextBlock Text="ПАРОЛЬ" 
                           Foreground="{StaticResource PrimaryColor}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,20"/>

                <!-- Кнопка входа -->
            </StackPanel>
        </Border>

        <!-- Нижняя панель с кнопками -->
        <Border Background="White" Margin="20,369,20,34">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="ВОЙТИ" Click="LoginButton_Click" Width="200" Margin="0,0,0,10"/>
                <Button Content="РЕГИСТРАЦИЯ" Click="RegisterButton_Click" Width="200" Background="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>