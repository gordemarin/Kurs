<Window x:Class="ServiceCenter.AddRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая заявка" Height="643" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}">
            <TextBlock Text="НОВАЯ ЗАЯВКА" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Основной контент -->
        <Border Grid.Row="1" Background="White" Margin="20,20,20,10" Padding="20" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="ИМЯ КЛИЕНТА" 
                           Foreground="{StaticResource PrimaryColor}" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,15"/>

                <TextBlock Text="ФАМИЛИЯ КЛИЕНТА" 
                           Foreground="{StaticResource PrimaryColor}" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="LastNameTextBox" Margin="0,5,0,15"/>

                <TextBlock Text="ТЕЛЕФОН" 
                           Foreground="{StaticResource PrimaryColor}" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneTextBox" Margin="0,5,0,15"/>
                
                <TextBlock Text="ОБОРУДОВАНИЕ" 
                           Foreground="{StaticResource PrimaryColor}" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="DeviceNameTextBox" Margin="0,5,0,15"/>
                
                <TextBlock Text="ОПИСАНИЕ" 
                           Foreground="{StaticResource PrimaryColor}" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" 
                         Height="80" 
                         TextWrapping="Wrap" 
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Нижняя панель с кнопками -->
        <Border Grid.Row="2" Background="White" Margin="20,0,20,20">
            <Button Content="СОХРАНИТЬ" 
                    Click="SaveButton_Click" 
                    Width="180" 
                    HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
